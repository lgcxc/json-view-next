{
  "name": "json-view-next",
  "description": "一个用于展示json的vue3组件",
  "version": "0.0.8",
  "author": "liugang <993372246@qq.com>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "files": [
    "lib",
    "src"
  ],
  "main": "./lib/json-view-next.es.js",
  "module": "./lib/json-view-next.umd.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/json-view-next.umd.js",
      "require": "./lib/json-view-next.es.js"
    }
  },
  "homepage": "https://lgcxc.github.io/json-view-next/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lgcxc/json-view-next.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:lib": "vue-tsc && vite build --mode lib",
    "preview": "vite preview",
    "changeset": "changeset",
    "version": "changeset version && npm install"
  },
  "dependencies": {
    "vue": "^3.4.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.3",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/compiler-sfc": "^3.4.7",
    "@vue/eslint-config-typescript": "^12.0.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.19.2",
    "eslint-plugin-vue-scoped-css": "^2.6.1",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "lint-staged": "^15.2.0",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "prettier": "^3.1.1",
    "stylelint": "~16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "~6.0.4",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^1.8.27"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.9.6"
  },
  "keywords": [
    "json-view-next",
    "json-view",
    "json"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "npm run lint:fix"
    ],
    "*.{html,vue,css,sass,less}": [
      "npm run stylelint:fix"
    ]
  }
}
